.th .go PKT31TX
.if &L'&DEBETTRIN1 > 0
.an &L'&DEBTORRTE1 > 0
.th 0 - &DEBETTRIN1. ¤&DEBTORRTE1. %
.br
.** TRIN 2 ************************************
...TRIN2
.if &L'&DEBETTRIN2 > 0
.an &L'&DEBTORRTE2 > 0
