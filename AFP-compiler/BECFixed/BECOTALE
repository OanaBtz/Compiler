.dm BECOTALE on
.if .&*1 = .vi
.th .se JEG   = 'vi'
.th .se MIG   = 'os'
.th .se MIN   = 'vor'
.th .se MIT   = 'vort'
.th .se MINE  = 'vore'
.th .se SJEG  = 'Vi'
.th .se SMIG  = 'Os'
.th .se SMIN  = 'Vor'
.th .se SMIT  = 'Vort'
.th .se SMINE = 'Vore'
.if .&*1 = .jeg
.th .se JEG   = 'jeg'
.th .se MIG   = 'mig'
.th .se MIN   = 'min'
.th .se MIT   = 'mit'
.th .se MINE  = 'mine'
.th .se SJEG  = 'Jeg'
.th .se SMIG  = 'Mig'
.th .se SMIN  = 'Min'
.th .se SMIT  = 'Mit'
.th .se SMINE = 'Mine'
.dm off
