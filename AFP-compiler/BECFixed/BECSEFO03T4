.*TEST PÅ OM PUNKT 5. SKAL UDSKRIVES **************************************
.if &L'&GÆLDAFDR1 = 0
.an &L'&GÆLDAFDR2 = 0
.an &L'&GÆLDAFDR3 = 0
.an &L'&GÆLDAFDR4 = 0
.an &L'&GÆLDAFDR5 = 0
.an &L'&GÆLDAFDR6 = 0
.an &L'&SAMBELØB = 0
.an &L'&GÆLDTBET1 = 0
.an &L'&GÆLDTBET2 = 0
.an &L'&GÆLDTBET3 = 0
.an &L'&GÆLDTBET4 = 0
.an &L'&GÆLDTBET5 = 0
.an &L'&GÆLDTBET6 = 0
.an &L'&KOMPENS1 = 0
